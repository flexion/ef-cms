doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Pending Report
  body
    .page-container
    img.logo(src=logo)
    h1.text-center United States Tax Court
    table
      thead
        tr Docket
        tr Date Filed
        tr Case Name
        tr Filings and Proceedings
        tr Case Status
        tr Judge
      tbody
        each pendingItem in pendingItems
          tr
            td= pendingItem.docketNumber
            td= pendingItem.filedAt
            td= pendingItem.name
            td= pendingItem.filings
            td= pendingItem.status
            td= pendingItem.judge
