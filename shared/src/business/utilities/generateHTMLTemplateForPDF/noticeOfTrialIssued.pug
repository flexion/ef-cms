.clear
  .info-box.info-box-trial
    .info-box-header
      p Trial At:
    .info-box-content
      if trialInfo.courthouseName
        p #{trialInfo.courthouseName}
      p #{trialInfo.address1}
      if trialInfo.address2
        p #{trialInfo.address2}
      p #{trialInfo.city}, #{trialInfo.state} #{trialInfo.postalCode}

  .info-box.info-box-judge
    .info-box-header 
      p Judge:
    .info-box-content
      p #{trialInfo.judge.name}

